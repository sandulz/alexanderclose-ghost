<ul>
  {{#foreach navigation}}
    <li>
      <a href="{{url absolute="true"}}">{{label}}</a>
    </li>
  {{/foreach}}

  {{#if @blog.twitter}}
    <li class="new-nav-group">
      <a href="{{twitter_url}}" target="_blank">{{@blog.twitter}}</a>
    </li>
  {{/if}}

  {{#if @blog.facebook}}
    <li class="{{^if @blog.twitter}}new-nav-group{{/if}}">
      <a href="{{facebook_url}}" target="_blank">{{@blog.facebook}}</a>
    </li>
  {{/if}}

  <li class="linkedin">
    <a href="https://www.linkedin.com/in/alexanderclose/" target="_blank">LinkedIn</a>
  </li>

  <li class="github">
    <a href="https://github.com/sandulz" target="_blank">GitHub</a>
  </li>

  <li class="tumblr">
    <a href="http://alexanderclose.tumblr.com/" target="_blank">Tumblr</a>
  </li>

  <li class="new-nav-group">
    {{#if @labs.subscribers}}
      <a class="subscribe-button" href="{{@blog.url}}/subscribe/">Subscribe</a>
    {{else}}
      <a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>
    {{/if}}
  </li>

</ul>

